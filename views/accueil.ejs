            <div>
                <div class="img_input">
                    <input type="file" accept="image/" hidden>
                </div>

                <div>
                    <input type="text" class="orienter_name" value="Gina M. Scichilone" readonly>
                    <input type="text" class="orienter_role" value="Conseillère en orientation" readonly>
                    <input type="email" value="GinaMaria.Scichilone@nbed.nb.ca" readonly>
